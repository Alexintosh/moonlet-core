{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./lib/",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        // "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            // add node as an option
            "node"
         ]
    },
    "include": [
        "./src/**/**/**/*",
        "./node_modules/types-bn/index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}