{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}